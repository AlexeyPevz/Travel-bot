# ===================================
# STAGING Environment Configuration
# ===================================

# ===================================
# База данных PostgreSQL (Staging)
# ===================================
STAGING_DATABASE_URL=postgresql://tourtinder_staging:staging123@localhost:5433/tourtinder_staging
STAGING_DB_PASSWORD=staging123

# ===================================
# Telegram Bot (Staging)
# ===================================
# Создайте отдельного бота для staging через @BotFather
STAGING_TELEGRAM_TOKEN=your_staging_bot_token_here

# ===================================
# AI провайдеры (Staging)
# ===================================
# Можно использовать те же ключи или отдельные для staging
STAGING_OPENROUTER_API_KEY=your_staging_openrouter_key
STAGING_YANDEX_GPT_API_KEY=
STAGING_YANDEX_GPT_FOLDER_ID=

# ===================================
# Level.Travel API (Staging)
# ===================================
# Используйте тестовый API ключ если доступен
STAGING_LEVELTRAVEL_API_KEY=your_staging_leveltravel_key
STAGING_LEVEL_TRAVEL_PARTNER=627387

# ===================================
# Redis (Staging)
# ===================================
STAGING_REDIS_HOST=localhost
STAGING_REDIS_PORT=6380
STAGING_REDIS_PASSWORD=redis_staging123

# ===================================
# Приложение (Staging)
# ===================================
STAGING_APP_URL=http://staging.yourdomain.com
STAGING_PORT=5001

# ===================================
# Безопасность (Staging)
# ===================================
# Используйте отдельные секреты для staging
STAGING_JWT_SECRET=your_staging_jwt_secret_min_32_chars
STAGING_SESSION_SECRET=your_staging_session_secret_min_32_chars
STAGING_CSRF_SECRET=your_staging_csrf_secret_min_32_chars

# ===================================
# Feature Flags (Staging)
# ===================================
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_DEBUG_MODE=true
ENABLE_TEST_ENDPOINTS=true
ENABLE_SWAGGER_UI=true

# ===================================
# Логирование (Staging)
# ===================================
STAGING_LOG_LEVEL=debug
STAGING_LOG_FORMAT=pretty  # pretty | json

# ===================================
# Мониторинг (Staging)
# ===================================
STAGING_ENABLE_METRICS=true
STAGING_METRICS_PORT=9091
STAGING_GRAFANA_PASSWORD=admin_staging

# Sentry DSN для staging (опционально)
STAGING_SENTRY_DSN=https://key@sentry.io/staging-project

# ===================================
# Rate Limiting (Staging)
# ===================================
# Более высокие лимиты для тестирования
STAGING_RATE_LIMIT_MAX=200
STAGING_RATE_LIMIT_WINDOW_MS=900000

# ===================================
# Email (для staging уведомлений)
# ===================================
STAGING_SMTP_HOST=smtp.mailtrap.io
STAGING_SMTP_PORT=2525
STAGING_SMTP_USER=your_mailtrap_user
STAGING_SMTP_PASS=your_mailtrap_pass
STAGING_EMAIL_FROM=staging@yourdomain.com

# ===================================
# Telegram WebApp (Staging)
# ===================================
STAGING_TELEGRAM_WEBAPP_DOMAIN=staging.yourdomain.com

# ===================================
# Внешние сервисы (Staging)
# ===================================
# Webhook URLs для staging
STAGING_WEBHOOK_URL=https://staging.yourdomain.com/api/webhook
STAGING_SLACK_WEBHOOK=https://hooks.slack.com/services/staging/webhook

# ===================================
# Тестовые данные
# ===================================
# Включить автоматическое создание тестовых данных
STAGING_SEED_DATABASE=true
STAGING_TEST_USER_COUNT=10
STAGING_TEST_TOUR_COUNT=100