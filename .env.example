# База данных PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/travel_db

# Telegram Bot
TELEGRAM_TOKEN=your_bot_token_from_botfather

# AI провайдеры
OPENROUTER_API_KEY=your_openrouter_api_key  # Опционально, есть fallback

# Level.Travel API
LEVELTRAVEL_API_KEY=your_leveltravel_api_key
LEVEL_TRAVEL_PARTNER=627387

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Безопасность (для продакшена сгенерируйте случайные значения)
JWT_ACCESS_SECRET=dev_jwt_access_secret
JWT_REFRESH_SECRET=dev_jwt_refresh_secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=ai-travel-agent
JWT_AUDIENCE=ai-travel-agent-api

# CSRF и сессии
CSRF_SECRET=dev_csrf_secret
COOKIE_SECRET=dev_cookie_secret
SESSION_SECRET=dev_session_secret

# Приложение
APP_URL=http://localhost:5000
NODE_ENV=development
LOG_LEVEL=info