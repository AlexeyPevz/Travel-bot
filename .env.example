# Server
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_travel

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# JWT
JWT_ACCESS_SECRET=change_me_access_secret_min_32_chars________________
JWT_REFRESH_SECRET=change_me_refresh_secret_min_32_chars_______________
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=ai-travel-agent
JWT_AUDIENCE=ai-travel-agent-api

# Telegram
TELEGRAM_TOKEN=your_bot_token
TELEGRAM_USE_WEBHOOK=false

# Security
CSRF_SECRET=change_me_csrf_secret_min_32_chars________________
SESSION_SECRET=change_me_session_secret_min_32_chars______________
COOKIE_SECRET=change_me_cookie_secret_min_32_chars_______________

# Metrics protection (optional in prod)
# METRICS_BASIC_AUTH=user:pass
# METRICS_IP_ALLOWLIST=127.0.0.1,10.0.0.0/8

# Feature flags
ENABLE_BACKGROUND_SEARCH=false
ENABLE_SMART_RANKING=false
ENABLE_NEW_PROFILE=false

# Providers
LEVELTRAVEL_API_KEY=your_leveltravel_api_key
LEVEL_TRAVEL_PARTNER=627387
LEVEL_TRAVEL_MARKER=marker
LEVEL_TRAVEL_AFFILIATE_URL=https://example.com/aff

# AI Providers
# OPENROUTER_API_KEY=your_openrouter_api_key
# YANDEX_GPT_API_KEY=your_yandex_api_key