# ===============================================
# Environment Configuration
# ===============================================
# Copy this file to .env and fill in your values

# Node Environment
# Options: development, production, test
NODE_ENV=production

# ===============================================
# Database Configuration
# ===============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://tourtinder:tourtinder123@localhost:5432/tourtinder

# ===============================================
# Redis Configuration
# ===============================================
# Redis cache and queue storage
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ===============================================
# API Keys and External Services
# ===============================================
# Telegram Bot Token
# Get from @BotFather: https://t.me/botfather
TELEGRAM_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# OpenRouter API Key for AI features
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=YOUR_OPENROUTER_API_KEY_HERE

# LevelTravel API Key
# Get from: https://leveltravel.ru/api
LEVELTRAVEL_API_KEY=YOUR_LEVELTRAVEL_API_KEY_HERE

# LevelTravel Partner ID
# Your partner ID from LevelTravel
LEVEL_TRAVEL_PARTNER=627387

# ===============================================
# Application Configuration
# ===============================================
# Application URL (without trailing slash)
# Used for webhooks, CORS, and web app links
APP_URL=http://localhost:5000

# Logging Level
# Options: error, warn, info, http, debug
LOG_LEVEL=info

# ===============================================
# Security Configuration (REQUIRED)
# ===============================================
# Session Secret (generate a random string)
# Example: openssl rand -hex 32
SESSION_SECRET=your-random-session-secret-min-32-chars

# Cookie Secret for signed cookies
# Example: openssl rand -hex 32
COOKIE_SECRET=your-random-cookie-secret-min-32-chars

# CSRF Secret for token generation
# Example: openssl rand -hex 32
CSRF_SECRET=your-random-csrf-secret-min-32-chars

# JWT Secret for API authentication (if needed)
# Example: openssl rand -hex 32
JWT_SECRET=your-random-jwt-secret-min-32-chars

# ===============================================
# Optional: Replit Configuration
# ===============================================
# Only needed if deploying on Replit
# REPL_ID=your-repl-id
# REPLIT_DOMAINS=your-app.repl.co,your-app-uuid.repl.co

# ===============================================
# Feature Flags (Optional)
# ===============================================
# Enable/disable specific features
# ENABLE_AI_ANALYSIS=true
# ENABLE_MONITORING=true
# ENABLE_NOTIFICATIONS=true

# ===============================================
# Rate Limiting (Optional)
# ===============================================
# API rate limit window in minutes
# RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
# RATE_LIMIT_MAX_REQUESTS=100

# ===============================================
# Monitoring and Analytics (Optional)
# ===============================================
# Prometheus metrics endpoint
# METRICS_ENABLED=true
# METRICS_PORT=9090

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===============================================
# Docker Secrets (Production Only)
# ===============================================
# When using Docker Secrets, reference them like:
# TELEGRAM_TOKEN_FILE=/run/secrets/telegram_token
# DATABASE_URL_FILE=/run/secrets/database_url