# ===================================
# База данных PostgreSQL
# ===================================
# Формат: postgresql://user:password@host:port/database
# Для локальной разработки:
DATABASE_URL=postgresql://tourtinder:tourtinder123@localhost:5432/tourtinder
# Для Docker:
# DATABASE_URL=postgresql://tourtinder:tourtinder123@postgres:5432/tourtinder

# ===================================
# Telegram Bot
# ===================================
# Получить у @BotFather в Telegram
TELEGRAM_TOKEN=your_bot_token_here

# ===================================
# AI провайдеры
# ===================================
# OpenRouter API для анализа текстовых запросов
# Получить на https://openrouter.ai/keys
# Работает с бесплатными моделями, можно оставить пустым для fallback
OPENROUTER_API_KEY=your_openrouter_api_key_here

# YandexGPT (опционально, платный резерв)
# Документация: https://cloud.yandex.ru/docs/yandexgpt/
YANDEX_GPT_API_KEY=
YANDEX_GPT_FOLDER_ID=

# ===================================
# Level.Travel API
# ===================================
# Получить на https://level.travel/affiliate
LEVELTRAVEL_API_KEY=your_leveltravel_api_key_here
# ID партнера для реферальных ссылок
LEVEL_TRAVEL_PARTNER=627387

# ===================================
# Redis (кеширование и очереди)
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ===================================
# Приложение
# ===================================
# URL где будет доступно приложение
APP_URL=http://localhost:5000
# Для продакшена: https://yourdomain.com

# Порт приложения (не менять, используется в Docker)
PORT=5000

# Окружение: development | production | test
NODE_ENV=development

# ===================================
# Безопасность
# ===================================
# Секретный ключ для JWT токенов (сгенерировать случайную строку)
# Можно сгенерировать: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_min_32_chars

# Секретный ключ для сессий
SESSION_SECRET=your_session_secret_key_here_min_32_chars

# ===================================
# Логирование
# ===================================
# Уровень логов: error | warn | info | debug
LOG_LEVEL=info

# ===================================
# Мониторинг (опционально)
# ===================================
# Включить Prometheus метрики
ENABLE_METRICS=true

# Sentry DSN для отслеживания ошибок (опционально)
SENTRY_DSN=

# ===================================
# Rate Limiting
# ===================================
# Максимум запросов с одного IP за окно времени
RATE_LIMIT_MAX=100
# Окно времени в миллисекундах (15 минут)
RATE_LIMIT_WINDOW_MS=900000

# ===================================
# Миграции БД
# ===================================
# Запускать ли миграции при старте (для Docker)
RUN_MIGRATIONS=true

# ===================================
# SSL сертификаты (для продакшена)
# ===================================
# Путь к сертификатам для HTTPS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===================================
# Telegram WebApp
# ===================================
# Домен для валидации Telegram WebApp данных
# Должен совпадать с доменом где размещен бот
TELEGRAM_WEBAPP_DOMAIN=yourdomain.com