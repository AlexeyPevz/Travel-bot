# База данных PostgreSQL (Neon или локальная)
DATABASE_URL=postgresql://user:password@localhost:5432/tourtinder

# Telegram Bot
TELEGRAM_TOKEN=your_bot_token_from_botfather

# OpenRouter API (для AI анализа)
OPENROUTER_API_KEY=your_openrouter_api_key

# Yandex GPT API (резервный AI провайдер)
YANDEX_GPT_API_KEY=your_yandex_gpt_api_key

# Level.Travel API
LEVELTRAVEL_API_KEY=your_leveltravel_api_key
LEVEL_TRAVEL_PARTNER=627387

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# URL приложения
APP_URL=http://localhost:5000

# Настройки безопасности
CSRF_SECRET=generate_random_secret_here
COOKIE_SECRET=generate_random_cookie_secret
SESSION_SECRET=generate_random_session_secret

# JWT настройки
JWT_ACCESS_SECRET=generate_random_jwt_access_secret
JWT_REFRESH_SECRET=generate_random_jwt_refresh_secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=ai-travel-agent
JWT_AUDIENCE=ai-travel-agent-api

# Логирование
LOG_LEVEL=info

# Окружение (development/production)
NODE_ENV=development

# Дополнительные настройки (опционально)
RUN_MIGRATIONS=true
ANALYZE=false