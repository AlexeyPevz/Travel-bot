# Production Environment Configuration
# IMPORTANT: Replace all placeholder values with real credentials
# Store real credentials in a secure secret management system (e.g. HashiCorp Vault, AWS Secrets Manager)

# Database
DATABASE_URL=postgresql://prod_user:SECURE_PASSWORD_HERE@prod_db_host:5432/travel_prod

# Telegram Bot
TELEGRAM_TOKEN=YOUR_PRODUCTION_BOT_TOKEN_HERE
TELEGRAM_USE_WEBHOOK=true
APP_URL=https://your-production-domain.com

# AI Services (Optional)
OPENROUTER_API_KEY=your-production-openrouter-key-here

# Level.Travel API
LEVELTRAVEL_API_KEY=your-production-leveltravel-key-here
LEVEL_TRAVEL_PARTNER=your-production-partner-id
LEVEL_TRAVEL_MARKER=your-production-marker-id
LEVEL_TRAVEL_AFFILIATE_URL=https://your-production-affiliate-url.com

# Redis
REDIS_HOST=prod-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=STRONG_REDIS_PASSWORD_HERE

# Security - MUST be strong random values!
# Generate with: openssl rand -base64 32
JWT_ACCESS_SECRET=GENERATE_STRONG_64_CHAR_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_STRONG_64_CHAR_SECRET_HERE
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=ai-travel-agent-prod
JWT_AUDIENCE=ai-travel-agent-api-prod
CSRF_SECRET=GENERATE_STRONG_64_CHAR_CSRF_SECRET_HERE
COOKIE_SECRET=GENERATE_STRONG_64_CHAR_COOKIE_SECRET_HERE
SESSION_SECRET=GENERATE_STRONG_64_CHAR_SESSION_SECRET_HERE

# Application
NODE_ENV=production
LOG_LEVEL=info
PORT=5000

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem